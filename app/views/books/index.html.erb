<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li>error is<%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Books</h1>
<table>
<tr>
  <th>Title</th>
  <th>Body</th>
</tr>
<% @books.each do |book| %>
<tr>
  <td><span><%= book.title %></span></td>
  <td><span><%= book.body %></span></td>
  <td><%= link_to "Show", book_path(book.id) %></td>
  <td><%= link_to "Edit", edit_book_path(book.id) %></td>
  <td><%= link_to "Destroy", book_destroy_path(book.id), method: :delete,"data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</table>

<h1>New book</h1>

<%= form_for(@book, url: '/books') do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %><br>
<%= f.submit 'Create Book' %>

<% end %>